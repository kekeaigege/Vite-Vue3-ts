{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    //是否开启严格模式
    "strict": false,
    //不能随便使用this
    "noImplicitThis": true,
    //默认
    "jsx": "preserve",
    "importHelpers": true,
    //默认
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",                              /* Skip type checking all .d.ts files. */
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
}
